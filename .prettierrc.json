{
  "trailingComma": "all",
  "overrides": [
    {
      "files": ".vscode/*.json",
      "options": {
        "parser": "jsonc"
      }
    },
    {
      "files": "frontend/**",
      "options": {
        "arrowParens": "always",
        "printWidth": 100,
        "singleQuote": true
      }
    },
    {
      "files": "frontend-v2/**",
      "options": {
        "printWidth": 80,
        "semi": false,
        "singleQuote": true,
        "tabWidth": 2,
        "useTabs": false
      }
    }
  ]
}
